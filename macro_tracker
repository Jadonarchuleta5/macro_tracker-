    <ul>
    {% for entry in entries %}
        <li>{{ entry.date }} - {{ entry.food }} - Carbs: {{ entry.carbohydrates }}g, Proteins: {{ entry.proteins }}g, Fats: {{ entry.fats }}g</li>
